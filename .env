# ============================================
# EHS Management System - Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Connection
# For Railway: Use the MongoDB plugin and it will auto-populate MONGODB_URI
MONGODB_URI=mongodb://mongo:SmNnbUauMqfbwoXCckPbwqwKAsemUzYr@mongodb.railway.internal:27017

# JWT Configuration (Generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-openssl-rand
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
# For Gmail: Enable 2FA and create an App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Twilio Configuration (Phone Verification)
# Get these from your Twilio Console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Application URL (Update for production)
APP_URL=https://your-app.railway.app

# Super Admin Credentials (Platform Administration)
SUPER_ADMIN_EMAIL=admin@safetyfirst.com
SUPER_ADMIN_PASSWORD=YourSecurePassword123!

# Encryption Key (Generate a 32-character random string)
ENCRYPTION_KEY=your-32-character-encryption-key!

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

